{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "@i18n/*": ["i18n/*"],
            "@api/*": ["app/api/*"],
            "@assets/*": ["assets/*"],
            "@ui/*": ["components/ui/*"],
            "@components/*": ["components/*"],
            "@lib/*": ["lib/*"],
            "@config": ["lib/config"],
            "@constants": ["lib/constants"],
            "@enums": ["lib/enums"],
            "@fonts": ["lib/fonts"],
            "@hooks": ["lib/hooks"],
            "@keys": ["lib/keys"],
            "@prisma-util": ["lib/prisma"],
            "@regexps": ["lib/regexps"],
            "@routes": ["lib/routes"],
            "@schemas": ["lib/schemas"],
            "@tokens": ["lib/tokens"],
            "@types": ["lib/types"],
            "@icon-names": ["lib/types/icon-names.ts"],
            "@utils": ["lib/utils"],
            "@data/*": ["data/*"],
            "@auth": ["./auth.ts"],
            "@locales/*": ["./locales/*"],
            "@actions/*": ["actions/*"]
        }
    },
    "include": ["svgr.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
