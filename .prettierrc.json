{
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": [
        "react/*",
        "next/*",
        "<THIRD_PARTY_MODULES>",
        "^./(.*)$",
        "^../(.*)$",
        "@ui/*",
        "@components/*",
        "@assets/*",
        "@i18n",
        "@i18nConfig",
        "@locales",
        "@fonts",
        "@config",
        "@keys",
        "@routes",
        "@types",
        "@icon-names",
        "@constants",
        "@regexps",
        "@tokens",
        "@schemas",
        "@hooks",
        "@utils",
        "@enums",
        "@prisma-util/*",
        "@auth",
        "@store/*",
        "@api/*",
        "@data/*",
        "@actions/*"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
}
