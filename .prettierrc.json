{
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": [
        "react/*",
        "next/*",
        "<THIRD_PARTY_MODULES>",
        "^./(.*)$",
        "^../(.*)$",
        "@ui/*",
        "@components/*",
        "@store/*",
        "@api/*",
        "@hooks/*",
        "@utils/*",
        "@types/*",
        "@enums/*",
        "@constants/*",
        "@regexps/*",
        "@assets/*",
        "@i18n",
        "@i18nConfig",
        "@data/*"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
}
